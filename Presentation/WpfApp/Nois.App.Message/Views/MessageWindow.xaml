<Window x:Class="Nois.App.Message.Views.MessageWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nois.App.Message.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200" Width="600" Height="100" WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="{Binding Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label FontSize="20" Content="{Binding Caption}" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"/>
        <Label FontSize="18" Content="{Binding Text}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0 0 0" Foreground="White" Grid.Row="1"/>
    </Grid>
</Window>
